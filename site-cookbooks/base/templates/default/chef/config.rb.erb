require 'yaml'

chef_env = ENV['CHEF_ENV'] || '<%= @default_chef_environment %>'
chef_dir = "#{ENV['HOME']}/.chef/environments/#{chef_env}"
config = YAML.load_file("#{chef_dir}/config.yml")

client_key "#{chef_dir}/client.pem"
validation_key "#{chef_dir}/validation.pem"
chef_server_url(config['server']) if config['server']
node_name config['node_name']
environment config['environment']
cookbook_path config['cookbook_path']
cookbook_copyright config['copyright']
cookbook_email config['email']

log_level :info
log_location STDOUT
