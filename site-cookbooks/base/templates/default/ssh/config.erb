Host *
  AddKeysToAgent yes
  UseKeychain yes
  KeepAlive yes
  ServerAliveInterval 60
  ServerAliveCountMax 5

Host *.x-plose.be,*.x-plose.cloud
  User root

Host *.getsilverfin.com,*.silverfin.com
  User root

<% node[:base][:ssh][:hosts].each do |host| %>
Host <%= host[:host] %>
  User <%= host[:user] %>
  HostName <%= host[:host_name] %>
<% if host[:port] %>
  Port <%= host[:port] %>
<% end %>

<% end %>
Match Host *.srvd.be,*.jeroenj.be
  ForwardAgent yes
