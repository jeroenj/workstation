[alias]
	co = checkout
	st = status
	ci = commit
	chp = cherry-pick
[apply]
	whitespace = fix
[branch]
	autosetuprebase = always
	autosetupmerge = true
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
[color "branch"]
	current = green reverse
[core]
	editor = vim
	excludesfile = ~/.gitignore
	whitespace = trailing-space,space-before-tab
	autocrlf = false
[diff]
	compactionHeuristic = 1
[github]
	user = <%= node[:base][:git][:github][:user] %>
	token = <%= node[:base][:git][:github][:token] %>
[init]
	templatedir = ~/.git-templates
[merge]
	conflictstyle = diff3
[push]
	default = upstream
[user]
	name = <%= node[:base][:git][:name] %>
	email = <%= node[:base][:git][:email] %>
	useconfigonly = true
